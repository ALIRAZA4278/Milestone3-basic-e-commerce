{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // Change to "node" for compatibility with Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",  // Ensure this is correctly included
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"  // Ensure this is correctly included
, "src/app/context/AuthProvider.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
